<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Top Row: Project ID, Plan Name, Plan ID, and Connect by Wi-Fi Button -->


    <LinearLayout
        android:id="@+id/top_row"
        android:layout_width="match_parent"
        android:layout_height="133dp"
        android:layout_alignParentTop="true"
        android:gravity="start|center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- First Card: Project Information -->
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="87dp"
                android:columnCount="2"
                android:orientation="horizontal"
                android:padding="8dp"
                android:rowCount="3">

                <!-- First Row -->
                <TextView
                    android:id="@+id/tv_project_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnSpan="1"
                    android:layout_gravity="start"
                    android:text="Project ID : "
                    android:textColor="#333333"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_floor_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnSpan="1"
                    android:layout_gravity="end"
                    android:text="floor ID : "
                    android:textColor="#333333"
                    android:textSize="12sp" />

                <!-- Second Row -->
                <TextView
                    android:id="@+id/tv_project"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnSpan="1"
                    android:layout_gravity="start"
                    android:text="Project : "
                    android:textColor="#333333"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_plan_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnSpan="1"
                    android:layout_gravity="end"
                    android:text="Map ID : "
                    android:textColor="#333333"
                    android:textSize="12sp" />

                <!-- Third Row: Centered Text -->
                <TextView
                    android:id="@+id/tv_plan_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnSpan="2"
                    android:layout_gravity="center"
                    android:text="Map Name : "
                    android:textColor="#333333"
                    android:textSize="12sp" />

            </GridLayout>


        </androidx.cardview.widget.CardView>

        <!-- Second Card: Camera Connection -->
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- Connect Wi-Fi Button -->
                <Button
                    android:id="@+id/btn_connect_by_wifi"
                    android:layout_width="168dp"
                    android:layout_height="33dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/colorPrimary"
                    android:padding="6dp"
                    android:text="Connect Camara Wi-Fi"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="10sp" />

                <!-- Connect USB Button -->
                <Button
                    android:id="@+id/btn_connect_by_usb"
                    android:layout_width="167dp"
                    android:layout_height="36dp"
                    android:background="@color/colorPrimary"
                    android:padding="6dp"
                    android:text="Connect Camara USB"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="10sp" />

            </LinearLayout>
<!--            <LinearLayout-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:orientation="horizontal"-->
<!--                android:padding="8dp"-->
<!--                android:gravity="center">-->
<!--                <Button-->
<!--                    android:id="@+id/btn_connect_by_wifi"-->
<!--                    android:layout_width="0dp"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_weight="1"-->
<!--                    android:layout_marginEnd="8dp"-->
<!--                    android:background="@color/colorPrimary"-->
<!--                    android:padding="6dp"-->
<!--                    android:text="Connect Camara Wi-Fi"-->
<!--                    android:textAllCaps="true"-->
<!--                    android:textColor="@android:color/white"-->
<!--                    android:textSize="10sp" />-->

<!--                <Button-->
<!--                    android:id="@+id/btn_connect_by_usb"-->
<!--                    android:layout_width="0dp"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_weight="1"-->
<!--                    android:background="@color/colorPrimary"-->
<!--                    android:padding="6dp"-->
<!--                    android:text="Connect Camara USB"-->
<!--                    android:textAllCaps="true"-->
<!--                    android:textColor="@android:color/white"-->
<!--                    android:textSize="10sp"/>-->

<!--            </LinearLayout>-->

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Fragment Container in Center -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="470dp"
        android:layout_below="@id/top_row"
        android:layout_marginTop="16dp">

        <!-- PathView here -->
        <com.arashivision.sdk.demo.activity.PathView
            android:id="@+id/pathView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/black" />
    </FrameLayout>

    <!-- Row: Start Recording and Stop Recording Buttons -->
    <LinearLayout
        android:id="@+id/record_buttons_row"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_below="@id/fragment_container"
        android:layout_marginTop="11dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_start_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:background="@color/colorAccent"
            android:padding="12dp"
            android:text="Start Record"
            android:textColor="@android:color/white"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btn_stop_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:padding="12dp"
            android:text="Stop Record"
            android:textColor="@android:color/white"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/description_upload_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/record_buttons_row"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_description"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:hint="Enter description"
            android:padding="10dp"
            android:textColor="#333333"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_select_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:backgroundTint="@color/colorAccent"
            android:padding="10dp"
            android:text="Upload Video"
            android:textColor="@android:color/white"
            android:textSize="10dp" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/description_upload_row"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="100"
        android:progressTint="@color/colorAccent"
        android:indeterminate="false"/>

    <!-- Other elements (invisible by default) -->
    <TextView
        android:id="@+id/tv_map_id"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btn_normal_record_start"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btn_normal_record_stop"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_selected_video"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_capture_time"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible" />

</RelativeLayout>
