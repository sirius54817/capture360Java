<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gradient background -->
    <gradient
        android:startColor="@color/colorPrimaryDark"
        android:endColor="@color/colorAccent"
        android:angle="45" /> <!-- Add a gradient angle for a diagonal gradient effect -->

    <!-- Rounded corners -->
    <corners android:radius="36dp" />

    <!-- Partial Border (only top border) -->

    <!-- Padding to simulate the partial border -->
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="10dp" /> <!-- Adjust this to control the visibility of the border and bottom space -->
</shape>
